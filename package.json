{
  "author": "Pierce Moore <me@prex.io>",
  "name": "rex-mongo",
  "description": "A small collection of utilities to simplify development using MongoDB.",
  "homepage": "https://github.com/rex/rex-mongo",
  "version": "0.2.1",
  "main": "lib/rex-mongo.js",
  "bin": {
    "rex-mongo": "bin/rex-kickstart",
    "rmongo": "bin/rex-kickstart"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/rex/rex-mongo.git"
  },
  "keywords": [
    "shell",
    "console",
    "execute",
    "bash",
    "cli",
    "mongo",
    "mongodb",
    "rex"
  ],
  "license": "MIT",
  "readmeFilename": "README.md",
  "directories": {
    "lib": "./lib",
    "test": "./test"
  },
  "dependencies": {
    "rex-exec": "*",
    "rex-shell": "*",
    "rex-utils": "*"
  },
  "devDependencies": {
    "async": "*"
  },
  "config": {
    "cli": {
      "usage": "rex-mongo [list|count|drop|version|help] [database]",
      "args": {
        "count": "Count the collections in a database. Leave empty for a list of databases.",
        "list": "List the collections in a database. Leave empty for a list of databases.",
        "drop": "Drop an entire database. Leave empty for a list of databases."
      }
    }
  },
  "bugs": {
    "url": "https://github.com/rex/rex-mongo/issues"
  },
  "scripts": {
    "test": "node ./test/rex-mongo.test.js"
  }
}
